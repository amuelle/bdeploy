{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "edge",
      "request": "launch",
      "version": "dev",
      "name": "Launch Edge",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "keepProfileChanges": true,
      "profileDir": "${workspaceRoot}/.vscode/firefox-debug-profile/",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (Central)",
      "url": "http://localhost:4201",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (Local)",
      "url": "http://localhost:4202",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
